<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imgAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imgadmin"
            android:src="@drawable/bird" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textFonction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:drawablePadding="@dimen/padding_img_text"
        android:textStyle="normal"
        android:textSize="@dimen/text_mail"
        android:onClick="onClickMethod" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >

        <TextView
            android:id="@+id/textTel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:clickable="true"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:textStyle="normal"
            android:onClick="onClickMethod"
            android:background="@drawable/background"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:drawablePadding="@dimen/padding_img_text"
            android:textSize="@dimen/text_size_medium"/>

        <ImageView
            android:id="@+id/imageSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:background="@drawable/background"
            android:onClick="onClickMethod"
            android:contentDescription="@string/admin_sms"
            android:src="@android:drawable/ic_menu_share" />
    </LinearLayout>

</LinearLayout>